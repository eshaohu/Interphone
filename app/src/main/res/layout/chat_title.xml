    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/lightBlue">

    <TextView
        android:id="@+id/back_text"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
