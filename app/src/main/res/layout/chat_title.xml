        android:textColor="@color/white"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:paddingTop="20dp"/>

    <ImageButton
        android:id="@+id/jump_to_voice_img"
